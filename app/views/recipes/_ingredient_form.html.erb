<% if amount == recipe.amounts.last %>
  <div class="blank-amount-ingredient-field">
    <div class="col-sm-7">
    <%= amounts_attributes.fields_for :ingredient do |ingredient_attributes| %>
      <%= ingredient_attributes.hidden_field :name %>
    <% end %>
    <input type="text" class="ingredient_input ui-autocomplete-input">
    </div>
    <div class="col-sm-2">
      <%= amounts_attributes.text_field :quantity, placeholder: "Quantity" %>
    </div>  
    <div class="col-sm-2">
      <%= amounts_attributes.text_field :unit, placeholder: "Unit" %>
    </div>    
    <button onclick="removeIngredient(this); return false;" class="btn btn-default add-ingredient"><span class="glyphicon glyphicon-minus"></span></button>
  </div>
<% else %>
  <div class="amount-ingredient-field">
    <div class="col-sm-7">
      <label for="ingredient">Ingredient</label>
      <%= amounts_attributes.fields_for :ingredient do |ingredient_attributes| %>
        <%= ingredient_attributes.hidden_field :name %>
      <% end %>
      <input type="text" class="ingredient_input ui-autocomplete-input">
    </div>
    <div class="col-sm-2">
      <%= label_tag :quantity %>
      <%= amounts_attributes.text_field :quantity, placeholder: "3" %>
    </div>
    <div class="col-sm-2">
      <%= label_tag :amount %>
      <%= amounts_attributes.text_field :unit, placeholder: "cups" %>
    </div>
    <label>Add New</label>
    <button onclick="addIngredient(); return false;" class="btn btn-default add-ingredient"><span class="glyphicon glyphicon-plus"></span></button>
  </div>
<% end %>
