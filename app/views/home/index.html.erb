<h2>Recipes</h2>
<div id="index_filter">
  <div class="btn-group">
    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Max Difficulty <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><a href="#">1</a></li>
      <li><a href="#">2</a></li>
      <li><a href="#">3</a></li>
      <li><a href="#">4</a></li>
      <li><a href="#">5</a></li>
    </ul>
  </div>
</div>
<div id="index_recipes" class="row">
  <% @recipes.each do |recipe| %>
    <%= link_to recipe do %>
      <div class="col-sm-6 col-md-4">
        <div class="item">
        <div class="thumbnail">
          <%= image_tag recipe.img_url, class: "thumbnail" %>
        </div>
          <div class="caption">
            <h3><%= recipe.name %></h3>
            <span class="tag_line"><i>"This is a tagline for the cocktail."</i></span>
            <div class="difficulty"><span class="glyphicon glyphicon-signal" aria-hidden="true"></span> <span>Difficulty: <%= recipe.display_difficulty %></span></div>
            <div class="favorites">Favorites: <span class="badge"><%= recipe.favorites.size %></span></div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>