<% if current_user.nil? %>

<% elsif @recipe.user.first_name == current_user.first_name %>
  <%= form_for [@recipe, @new_review], remote: true do |f| %>
    <% if signed_in? %>
      <%= f.text_area :comment, rows: '3', placeholder: "Comment here..." %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit 'Leave Comment'%>
    <% end %>
  <% end %>
<% end %>
