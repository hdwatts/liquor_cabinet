<% if current_user.nil? %>
  <%= link_to 'Create Account', new_user_path, class: "anon" %> or <%= link_to 'Log In',login_path, class: "anon" %> to Comment
<% else %>
  <%= form_for [@recipe, @new_review], remote: true do |f| %>
    <% if signed_in? %>
      <%= f.text_area :comment, rows: '3', placeholder: "Comment here..." %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit 'Leave Comment', class: "btn-primary" %>
    <% end %>
  <% end %>
<% end %>
