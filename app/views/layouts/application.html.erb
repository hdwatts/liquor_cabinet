<!DOCTYPE html>
<html>
<head>
  <title>CocktailCabinet</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Playfair+Display:400,400italic,700,700italic,900' rel='stylesheet' type='text/css'>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>
<div class="slider"></div>
<div id="loader-wrapper" style="display:none;">
    <div id="loader"></div>

    <div class="loader-section section-left"></div>
    <div class="loader-section section-right"></div>
 
</div>
  <% if @age != 1 %>
    <%= render '/home/age_gate'%>
  <% end %>

  <%= render 'layouts/nav_bar' %>
  <%= render 'home/search_bar'%>
  <% flash.each do |type, message| %>
    <div class="alert alert-<%= type %>" role="alert"><%= message %></div>
  <% end %>
<div class= 'container main' style="opacity:0;">  <%= yield %> </div>

  <footer id="footer">
  </footer>
</body>

</html>
