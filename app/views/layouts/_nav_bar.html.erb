<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <%= link_to 'Cocktail Cabinet', root_path, class: 'navbar-brand' %>
    <% if current_user %>
      <div class="navbar-right">
        <div class="dropdown">
         <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
           <% if current_user.img_url %>
              <div class="profile-img" style="background-image:url('<%= current_user.img_url %>')"><span></span></div>
              <%= current_user.first_name %><span class="caret"></span></button>
