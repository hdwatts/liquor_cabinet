          <li><a href= '/logout' class="navbar-btn">Sign out</a></li>
        </ul>
        </div>
        <a href= '/recipes/new' type="button" class="btn btn-primary navbar-btn">Add Recipe</a>
      </div>
      <% else %>
      <div class="navbar-right">
      <a href= '/login' type="button" class="btn btn-default navbar-btn">Sign in</a>
      <a href= '/users/new' type="button" class="btn btn-default navbar-btn">Sign Up</a>
    </div>
    <% end  %>
  </div>
